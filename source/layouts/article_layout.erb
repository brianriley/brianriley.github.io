<% wrap_layout :layout do %>
  <%= partial(:article, :locals => { :article => current_article }) %>

  <% if previous_article %>
    <div class="u-pull-left"><%= link_to '&laquo; ' + previous_article.title, previous_article %></div>
  <% end %>
  <% if next_article %>
    <div class="u-pull-right"><%= link_to next_article.title + ' &raquo;', next_article %></div>
  <% end %>
<% end %>
